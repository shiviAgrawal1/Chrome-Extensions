{
	"manifest_version": 2,
	"name": "Page Font Style Extension",
	"version": "1.0",
	"description": "Changes font Style on a specific page!",
	"icons":{
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},

	"page_action":{
		"default_icon": "icon16.png",
		"default_popup": "popup.html",
		"default_title": "PageFontStyle"
	},

	 "background": {
    	"scripts": ["eventpage.js"],
    	"persistent": false
    },
    
    "permissions": [
    	"tabs"
    ] 
    
    




}